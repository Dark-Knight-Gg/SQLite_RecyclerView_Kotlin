<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".MainActivity2">
    <TextView
        android:text="Insert a Job"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="35sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#ff00"
        android:layout_marginTop="40dp"
        android:id="@+id/m2_txtTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:hint="Nhập tên công việc..."
        android:textSize="22sp"
        app:layout_constraintTop_toBottomOf="@id/m2_txtTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:id="@+id/m2_edtName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        app:layout_constraintTop_toBottomOf="@id/m2_edtName"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="22sp"
        android:hint="Nhập mô tả công việc..."
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:id="@+id/m2_edtDescribe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ImageView
        android:src="@drawable/picture"
        app:layout_constraintTop_toBottomOf="@id/m2_edtDescribe"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:id="@+id/m2_imgPicture"
        android:layout_width="150dp"
        android:layout_height="150dp"/>
    <ImageView
        android:src="@drawable/camera"
        android:id="@+id/m2_imgCamera"
        android:layout_marginStart="50dp"
        app:layout_constraintTop_toBottomOf="@id/m2_edtDescribe"
        app:layout_constraintLeft_toRightOf="@id/m2_imgPicture"
        android:layout_marginTop="40dp"
        android:layout_width="50dp"
        android:layout_height="50dp"/>
    <ImageView
        android:id="@+id/m2_imgFolder"
        android:src="@drawable/folder"
        app:layout_constraintTop_toBottomOf="@id/m2_imgCamera"
        app:layout_constraintLeft_toRightOf="@id/m2_imgPicture"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:layout_width="50dp"
        android:layout_height="50dp"/>
    <Button
        android:text="Ok"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@id/m2_imgPicture"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="90dp"
        android:textAllCaps="false"
        android:layout_marginTop="30dp"
        android:id="@+id/m2_btnOk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:text="Huy"
        android:textAllCaps="false"
        android:textSize="25sp"
        android:id="@+id/m2_btnCancle"
        app:layout_constraintTop_toBottomOf="@id/m2_imgPicture"
        app:layout_constraintLeft_toRightOf="@id/m2_btnOk"
        android:layout_marginTop="30dp"
        android:layout_marginStart="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>