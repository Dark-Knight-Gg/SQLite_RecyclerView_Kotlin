<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/adadpter_imgPicture"
        android:layout_width="100dp"
        android:layout_height="100dp"/>
    <TextView
        android:textSize="20sp"
        android:textColor="#ff00"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toRightOf="@id/adadpter_imgPicture"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="20dp"
        android:id="@+id/adadpter_txtName"
        android:layout_width="200dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="18sp"
        android:textStyle="italic"
        android:textColor="#ff00"
        android:id="@+id/adapter_txtDescribe"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toRightOf="@id/adadpter_imgPicture"
        app:layout_constraintTop_toBottomOf="@id/adadpter_txtName"
        android:layout_marginStart="20dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"/>
    <ImageView
        android:src="@drawable/delete"
        android:id="@+id/adapter_imgDelete"
        app:layout_constraintLeft_toRightOf="@id/adadpter_txtName"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_width="35dp"
        android:layout_height="35dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>